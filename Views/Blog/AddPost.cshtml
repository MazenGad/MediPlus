@model BlogPost


@{
    SelectList Options = new SelectList(ViewBag.Categories, "Id", "Name");
}


<h2>Add New Post</h2>


<form asp-action="AddPost" asp-controller="Blog" method="post" enctype="multipart/form-data">

    <label>Choose Category</label>
    <select class="form form-control" asp-for="CategoryId" asp-items="Options">
        <option value="">Choose Category</option>
    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>


    <label>Title</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <label>Author Name</label>
    <input asp-for="Author" class="form-control" />
    <span asp-validation-for="Author" class="text-danger"></span>

    <label>Content</label>
    <input asp-for="Content" class="form-control" />
    <span asp-validation-for="Content" class="text-danger"></span>


    <label>Choose Image</label>
    <input asp-for="TitleImage" class="form-control" type="file" />
    <span asp-validation-for="TitleImage" class="text-danger"></span>

    <button type="submit" class="btn btn-success mt-3">Add</button>
</form>
