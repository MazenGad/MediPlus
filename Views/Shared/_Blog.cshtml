<!-- Start Blog Area -->
<section class="blog section" id="blog">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>Keep up with Our Most Recent Medical News.</h2>
					<img src="img/section-img.png" alt="#">
					<p>Lorem ipsum dolor sit amet consectetur adipiscing elit praesent aliquet. pretiumts</p>
				</div>
			</div>
		</div>
		<div class="row">

			<div class="col-lg-4 col-md-6 col-12">
				@{
					foreach (var c in ViewBag.Posts)
					{
						<div class="single-news">
							<div class="news-head">
								<img src=@c.TitleImage alt="#">
							</div>
							<div class="news-body">
								<div class="news-content">
									<div class="date">@c.PublishedDate.ToString("dd MMM yyyy")</div>
									<h2><a asp-action="BlogPost" asp-controller="Blog" asp-route-id="@c.Id">@c.Title</a></h2>
									<p class="text">@c.Overview</p>
								</div>
							</div>
						</div>
						<!-- End Single Blog -->
					}

				}
			</div>

		</div>
	</div>
</section>
<!-- End Blog Area -->
