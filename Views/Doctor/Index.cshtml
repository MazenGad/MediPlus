@model IEnumerable<Doctor>

<a asp-action="Create" class="btn btn-primary text-white"> Add New Doctor </a>

<table class="table mt-2">
    <tr>
        <th>Name</th>
        <th>MedicalField</th>
        <th>PhoneNumber</th>
        <th>Email</th>
        <th>Department</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>
    @foreach (var doctor in Model)
    {
        <tr>
            <td>@doctor.Name</td>
            <td>@doctor.MedicalField</td>
            <td>@doctor.PhoneNumber</td>
            <td>@doctor.Email</td>
            <td>@doctor.Department?.Name</td>
            <td>
                <img src="@doctor.ProfileImageUrl" alt="Doctor Image=" width="50" height="50" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-danger">Remove</a>
            </td>
        </tr>
    }
</table>
